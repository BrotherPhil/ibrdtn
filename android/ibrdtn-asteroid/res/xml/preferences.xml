<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/service">
        <CheckBoxPreference android:key="checkActivate" android:title="@string/runasbackgroundservice" android:disableDependentsState="true"/>
        <CheckBoxPreference android:summary="@string/runonboot_desc" android:title="@string/runonboot" android:defaultValue="false" android:key="runonboot"></CheckBoxPreference>    
	</PreferenceCategory>
    <PreferenceCategory android:title="@string/daemon_connection">
        <EditTextPreference android:title="@string/host_address" android:key="host_address" android:defaultValue="0.0.0.0"/>
        <EditTextPreference android:title="@string/host_port" android:key="host_port" android:defaultValue="4550"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="System">
<!--    <CheckBoxPreference android:summary="Enable debugging output" android:title="Debug" android:key="debug" android:dependency="checkActivate"/> -->
        <Preference android:title="@string/system_version" android:key="system_version"/>
	</PreferenceCategory>
</PreferenceScreen>
