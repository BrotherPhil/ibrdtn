        <CheckBoxPreference android:title="@string/pref_constrains_lifetime" android:key="constrains_lifetime" android:summary="@string/pref_constrains_lifetime_summary"/>
        <CheckBoxPreference android:title="@string/pref_constrains_timestamp" android:key="constrains_timestamp" android:summary="@string/pref_constrains_timestamp_summary"/>
        <ListPreference android:summary="@string/pref_security_mode_desc" android:title="@string/pref_security_mode" android:key="security_mode" android:entries="@array/security_modes_names" android:entryValues="@array/security_modes_values" android:defaultValue="disabled"/>
        <EditTextPreference android:summary="@string/pref_bab_key_desc" android:title="@string/pref_bab_key" android:key="security_bab_key"/>
