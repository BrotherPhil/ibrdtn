<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     >
     
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/layoutTitleBar"
	    android:layout_width="fill_parent"
	    android:layout_height="52dp"
	    android:background="@null"
	    android:orientation="horizontal">
	
	    <ImageView
	        android:id="@+id/iconTitleBar"
	        android:layout_width="32dp"
	        android:layout_height="32dp"
	        android:layout_weight="0"
	        android:layout_margin="8dp"
	        android:src="@drawable/online" />
	    
	    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:padding="4dp"
	        android:background="@null">
		
		    <TextView
		        android:id="@+id/labelTitleBar"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignTop="@+id/iconTitleBar"
		        android:layout_toRightOf="@+id/iconTitleBar"
		        android:gravity="center_vertical"
		        android:text="@string/nickname"
		        android:textSize="18dp" />
		
		    <TextView
		        android:id="@+id/bottomtextTitleBar"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_alignLeft="@+id/labelTitleBar"
		        android:layout_below="@+id/labelTitleBar"
		        android:ellipsize="marquee"
		        android:singleLine="true"
		        android:text="@string/example_text"
		        android:textSize="12dp" />
			    
    	</RelativeLayout>
	
	</LinearLayout>
	
	<View
	    android:layout_width="match_parent"
	    android:layout_height="2dp"
	    android:background="@color/blue"
	/>
       
    <ListView  
        android:id="@android:id/list"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <!-- Preview: listitem=@layout/roster_item -->
    </ListView>
 </LinearLayout>